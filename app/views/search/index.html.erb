<div class="row">
    <div class="col-md-4 col-sm-4 col-xs-12">
    </div>
    <div class="col-md-4 col-sm-4 col-xs-12">
        <div class="form" style="margin-top:20px;">
            <center>
                <div class="form_tag">
                    <%= form_tag( '/result', :method => :get ) do %>
                        <%= text_field_tag :property_type, params[:property_type], placeholder:"e.g property/type", class:"search_field" %>
                        <br>
                        <%= text_field_tag :property_size, params[:property_size], placeholder:"e.g property size", class:"search_field" %>
                        <br>
                        <%= text_field_tag :city, params[:city], placeholder:"e.g city, mohali", class:"search_field"  %>
                        <br>
                        <%= text_field_tag :type_of_lister, params[:type_of_lister], placeholder:"e.g owner/broker", class:"search_field" %>
                        <br>
                        <%= text_field_tag :property_status, params[:property_status], placeholder:"e.g lees/sale", class:"search_field" %>
                        <br>
                        <%= text_field_tag :location, params[:location], placeholder:"e.g location, mohali", class:"search_field"  %>
                        <br>
                        <%= submit_tag "Submit", class:"submit_search" %>
                    <% end %>
                </div>
            </center>    
        </div>
    </div>
    <div class="col-md-4 col-sm-4 col-xs-12">
    </div>
</div>